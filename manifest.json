{
  "manifest_version": 3,
  "name": "Nowtify",
  "version": "1.0.0",
  "description": "Soyez notifié instantanément quand vos streamers favoris passent en live sur Twitch, YouTube et Kick",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "192": "icons/android-chrome-192x192.png",
    "512": "icons/android-chrome-512x512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "192": "icons/android-chrome-192x192.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "notifications",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.twitch.tv/*",
    "https://www.googleapis.com/youtube/v3/*",
    "https://kick.com/*"
  ],
  "options_page": "options.html"
}